@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row mb-5 text-center">
    <section class="product_section layout_padding gray-section pb-4 pt-4 mb-4">
        <div class="heading_container heading_center">
            <h1 class="text-center">
                Create a new account
            </h1>
        </div>
    </section>

    <section class="shadow rounded col-md-4 offset-4 p-5">

        <div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="Input.Email" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control text-center" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <label asp-for="Input.FirstName" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <label asp-for="Input.LastName" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <label asp-for="Input.Address" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <label asp-for="Input.City" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.City" class="form-control" autocomplete="city" aria-required="true" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>

                <label asp-for="Input.State" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.State" class="form-control" autocomplete="state" aria-required="true" />
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>

                <label asp-for="Input.Zip" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.Zip" class="form-control" autocomplete="zip" aria-required="true" />
                    <span asp-validation-for="Input.Zip" class="text-danger"></span>
                </div>

                <label asp-for="Input.Phone" action="text-center mb-2" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.Phone" class="form-control" autocomplete="phone" aria-required="true" />
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>

                <label asp-for="Input.Password" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <label asp-for="Input.ConfirmPassword" class="control-label d-block text-center m-3"></label>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-primary mb-3 text-center w-100 d-inline-block mt-3">Register</button>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
