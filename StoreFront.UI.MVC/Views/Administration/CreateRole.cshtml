@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create a Role";
}

<div class="row">
    <div class="offset-4 col-md-4 row text-center shadow rounded mb-5 mt-5 p-3">
    <h1 class="text-center">Role Creation</h1>
    <hr />
        <form asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleName" class="col-form-label"></label>

                <input asp-for="RoleName" class="form-control text-center" placeholder="Name" />
                <span asp-validation-for="RoleName" class="text-danger"></span>

            </div>

            <div class="form-group">
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary" style="width:auto">
                        Create Role
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
