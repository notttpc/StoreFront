@model StoreFront.DATA.EF.Models.Genre

<div class="row">
    <div class="col-md-4 mx-auto pt-3 shadow rounded p-2">
        <form asp-action="GenreCreate" id="GenreCreateForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="GenreName" class="control-label"></label>*@
                <input asp-for="GenreName" class="form-control" placeholder="Genre Name..." />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group mt-1 text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
