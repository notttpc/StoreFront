@model StoreFront.UI.MVC.ContactViewModel

}
@{
    ViewData["Title"] = "Contact";
}

<div class="container">
    <!-- HERO SECTION-->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                <div class="col-lg-6">
                    <h1 class="h2 text-uppercase mb-0">Contact Us</h1>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                            <li class="breadcrumb-item"><a class="text-dark" href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Contact</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <!-- ======= Contact Section ======= -->
    <section class="mb-5">
        <div class="text-center">
            <p class="text-danger">
                @ViewBag.ErrorMessage
            </p>

            <h3>
                Let us know if you have any questions!
            </h3>
        </div>
        <div class="col-lg-8 mt-3 offset-2 rounded shadow">
            <form asp-action="Contact" class="php-email-form p-3 rounded mx-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 form-group pt-1">
                        @*<label asp-for="Name" class="control-label"></label>*@
                        <input asp-for="Name" class="form-control" id="name" placeholder="Your Name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 form-group mt-3 mt-md-0 pt-1">
                        @*<label asp-for="Email" class="control-label"></label>*@
                        <input asp-for="Email" class="form-control" id="email" placeholder="Your Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-3 p-1">
                    @*<label asp-for="Subject" class="control-label"></label>*@
                    <input asp-for="Subject" class="form-control" id="subject" placeholder="Subject" required />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group mt-3 p-1">
                    @*<label asp-for="Message" class="control-label"></label>*@
                    <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="text-center pb-1 my-3">
                    <button class="btn btn-outline-dark btn-sm" type="submit">Send Message</button>
                </div>
            </form>
        </div>
    </section><!-- End Contact Section -->
</div>