@{
    ViewData["Title"] = "Contact";
}

@model Personal_MVC_Site.Models.ContactViewModel



<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Contact Me</h2>
                <p>PAGE IS STILL UNDER CONSTRUCTION</p>
            </div>

            <div>
                <iframe class="rounded" style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3102.274884998462!2d-94.60958528389634!3d38.96339085065514!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0e925e366ed0f%3A0x73aec4617abd2f03!2sCentriq%20Training!5e0!3m2!1sen!2sus!4v1630519113795!5m2!1sen!2sus" width="600" height="450" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="row mt-5">
                <div class="col-lg-4">
                    <div class="info rounded">
                        <div class="address ">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <p>Kansas City Metropolitan Area</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>BlakeMHarrison@outlook.com</p>
                        </div>

                        <!-- <div class="phone ">
                          <i class="bi bi-phone"></i>
                          <h4>Call:</h4>
                          <p></p>
                        </div> -->
                    </div>
                </div>

                <div class="col-lg-8 mt-5 mt-lg-0 rounded">
                    <form asp-action="Contact" class="php-email-form p-2 rounded">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6 form-group pt-1">
                                @*<label asp-for="Name" class="control-label"></label>*@
                                <input asp-for="Name" class="form-control" id="name" placeholder="Your Name" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 form-group mt-3 mt-md-0 pt-1">
                                @*<label asp-for="Email" class="control-label"></label>*@
                                <input asp-for="Email" class="form-control" id="email" placeholder="Your Email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mt-3 p-1">
                            @*<label asp-for="Subject" class="control-label"></label>*@
                            <input asp-for="Subject" class="form-control" id="subject" placeholder="Subject" required />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3 p-1">
                            @*<label asp-for="Message" class="control-label"></label>*@
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Message" required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="text-center pb-2 my-3">
                            <button type="submit">Send Message</button>
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </section><!-- End Contact Section -->
</main><!-- End #main -->
