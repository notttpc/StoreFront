@model IEnumerable<StoreFront.DATA.EF.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <!-- HERO SECTION-->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                <div class="col-lg-6">
                    <h1 class="h2 text-uppercase mb-0">Products Ordered</h1>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                            <li class="breadcrumb-item"><a class="text-dark" href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Cart</li>
                        </ol>
                    </nav>
                    @if (User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item "><a class="nav-link" asp-action="Create">Create New Order</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </section>

    <section class="col-md-8 offset-2">

    <table class="table-striped table-hover table mt-5 mb-5 shadow rounded">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipToName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipState)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipZip)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipToName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipState)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipZip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserId)
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a>
                            @Html.Raw("|")
                            <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    </section>
</div>
