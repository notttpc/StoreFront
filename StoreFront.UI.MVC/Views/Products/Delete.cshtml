@model StoreFront.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Delete" + Model.ProductName;
}

<section class="text-center pb-4 pt-4 mb-4">
    <div>
        <h2>
            Delete @Model.ProductName ?
        </h2>
    </div>
</section>

<div class="row mb-5 text-center">
    <div class="col-md-6 offset-md-3 mb-2">
        <div class="text-center">
            <img src="~/img/@Model.ProductImage" alt="@Model.ProductName" longdesc="@Model.ProductDescription" class="img-fluid" />
            <p class="text-info mt-4">
                @Html.DisplayFor(model => model.ProductDescription)
            </p>
        </div>
    </div>

    <div class="row col-md-6 offset-3">
        <div class="col-md-6">
            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.ProductPrice) :
                </strong>
                @Html.DisplayFor(model => model.ProductPrice)
            </p>
            <p>
                <strong>@Html.DisplayNameFor(model => model.ProductStatus) :</strong>
                @Html.DisplayFor(model => model.ProductStatus.StatusDescription)
            </p>
            <p>
                <strong>@Html.DisplayNameFor(model => model.IsFeatured) :</strong>
                @{
                    string lineText = Model.IsFeatured ? "Yes" : "No";
                }
                <span>@lineText</span>
            </p>
        </div>

        <div class="col-md-6">
            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Category.CategoryName) :
                </strong>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </p>
            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Company) :
                </strong>
                @Html.DisplayFor(model => model.Company.CompanyName)
            </p>
        </div>
    </div>

    <div class="text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger w-25 mt-2" />
        </form>
        <a asp-action="Index" class="btn btn-outline-warning mt-2">Back to Products</a>
        <a asp-action="AdminView" class="btn btn-outline-warning ms-1 mt-2">Back to Admin View</a>
    </div>
</div>

