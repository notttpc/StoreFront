@using StoreFront.DATA.EF.Models
@model StoreFront.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Details";
}



<section class="py-5">
    <div class="container">
        <section class="py-5 bg-light">
            <div class="container">
                <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                    <div class="col-lg-6">
                        <h1 class="h2 text-uppercase mb-0">Product Detail</h1>
                    </div>
                    <div class="col-lg-6 text-lg-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                                <li class="breadcrumb-item"><a class="text-dark" href="@Url.Action("Index", "Home")">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Detail</li>
                            </ol>
                        </nav>
                        <ul class="navbar-nav">
                            <li class="nav-item "><a class="nav-link" asp-action="Index">Go To Shop</a></li>
                        </ul>
                        @if (User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item "><a class="nav-link" asp-action="Edit" asp-route-id="@Model?.ProductId">Edit Product</a></li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </section>
        <br />
        <br />
        <div class="row mb-5">
            <div class="col-lg-6">
                <!-- PRODUCT SLIDER-->
                <div class="row m-sm-0">
                    <div class="col-sm-10 order-1 order-sm-2">
                        <div class="swiper product-slider">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide h-auto"><a class="glightbox product-view" href="~/img/@Model.ProductImage"><img src="~/img/@Model.ProductImage" alt="@Model.ProductName" /></a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- PRODUCT DETAILS-->
            <div class="col-lg-6">
                <ul class="list-inline mb-2 text-sm">
                    <li class="list-inline-item m-0"><i class="fas fa-star small text-warning"></i></li>
                    <li class="list-inline-item m-0 1"><i class="fas fa-star small text-warning"></i></li>
                    <li class="list-inline-item m-0 2"><i class="fas fa-star small text-warning"></i></li>
                    <li class="list-inline-item m-0 3"><i class="fas fa-star small text-warning"></i></li>
                    <li class="list-inline-item m-0 4"><i class="fas fa-star small text-warning"></i></li>
                </ul>
                <h1>@Model.ProductName</h1>
                <p class="text-muted lead">@($"{Model.ProductPrice:C}")</p>
                <p class="text-sm mb-4">@Model.ProductDescription</p>
                <div class="row align-items-stretch mb-4">
                    <div class="col-sm-5 pr-sm-0">
                        <a class="btn btn-dark btn-md mb-5" asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@Model.ProductId">Add to cart</a>
                    </div>
                    <ul class="list-unstyled">
                        <li class="px-3 py-2 mb-3 bg-light text-muted w-50"><strong class="text-uppercase text-dark">Category:</strong><a class="reset-anchor ms-2 text-muted">@Model.Category.CategoryName</a></li>
                        <li class="px-3 py-2 mb-3 bg-light text-muted w-50"><strong class="text-uppercase text-dark">Company:</strong><a class="reset-anchor ms-2 text-muted">@Model.Company.CompanyName</a></li>
                    </ul>
                </div>
            </div>
            <!-- DETAILS TABS-->
            <div class="tab-content mb-5" id="myTabContent">
                <ul class="nav nav-tabs border-0 mt-5" id="myTab" role="tablist">
                    <li class="nav-item"><a class="nav-link text-uppercase active" id="description-tab" data-bs-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a></li>
                    <li class="nav-item"><a class="nav-link text-uppercase" id="reviews-tab" data-bs-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a></li>
                </ul>
                <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                    <div class="p-4 p-lg-5 bg-light">
                        <h6 class="text-uppercase">Product description </h6>
                        <p class="text-muted text-sm mb-0">@Model.ProductDescription</p>
                    </div>
                </div>
                <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                    <div class="p-4 p-lg-5 bg-light">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="d-flex mb-3">
                                    <div class="flex-shrink-0"><img class="rounded-circle" src="~/img/customer-1.png" alt="" width="50" /></div>
                                    <div class="ms-3 flex-shrink-1">
                                        <h6 class="mb-0 text-uppercase">Jason Doe</h6>
                                        <p class="small text-muted mb-0 text-uppercase">20 May 2020</p>
                                        <ul class="list-inline mb-1 text-xs">
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star-half-alt text-warning"></i></li>
                                        </ul>
                                        <p class="text-sm mb-0 text-muted">Suited my needs very well! No problems here.</p>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="flex-shrink-0"><img class="rounded-circle" src="~/img/customer-2.png" alt="" width="50" /></div>
                                    <div class="ms-3 flex-shrink-1">
                                        <h6 class="mb-0 text-uppercase">Jane Doe</h6>
                                        <p class="small text-muted mb-0 text-uppercase">20 May 2020</p>
                                        <ul class="list-inline mb-1 text-xs">
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                            <li class="list-inline-item m-0"><i class="fas fa-star-half-alt text-warning"></i></li>
                                        </ul>
                                        <p class="text-sm mb-0 text-muted">It's a great product! Must by more.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- RELATED PRODUCTS-->
            <h2 class="h5 text-uppercase mb-4">Related products</h2>
            <div class="row">
                @foreach (Product item in ViewBag.Products)
                {
                    <!-- PRODUCT-->
                    <div class="col-lg-3 col-sm-6">
                        <div class="product text-center skel-loader">
                            <div class="d-block mb-3 position-relative">
                                <a class="d-block" asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductId"><img class="img-fluid w-100" src="~/img/@item.ProductImage" alt="@item.ProductName"></a>
                                <div class="product-overlay">
                                    <ul class="mb-0 list-inline">
                                        <li class="list-inline-item m-0 p-0">
                                            <a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.ProductId" class="btn btn-sm btn-dark">
                                                Add to Cart
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <h6> <a class="reset-anchor" href="detail.html">@item.ProductName</a></h6>
                            <p class="small text-muted">@($"{item.ProductPrice:c}")</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>